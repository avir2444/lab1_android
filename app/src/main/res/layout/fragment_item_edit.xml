<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ca2c92"
    tools:context=".todo.item.ItemEditFragment">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume"
        android:textColor="#ffd700"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/item_nume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:textColor="#ffd700"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Varsta"
        android:textColor="#ffd700"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/item_varsta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffd700"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="80dp"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffd700"
        android:text="Echipa"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/item_echipa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffd700"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="80dp"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffd700"
        android:text="Pozitie"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/item_pozitie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffd700"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="80dp"
        android:text="" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="#12e52b"
        app:srcCompat="@android:drawable/ic_menu_save" />

</FrameLayout>